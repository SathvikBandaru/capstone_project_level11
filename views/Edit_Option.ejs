<html>
  <head>
    <title>Edit Option | Online Voting Platform</title>
    <meta name="csrf-token" content="<%= csrf %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <style>
      body{
        background: linear-gradient(#0331ff, #00ddff);
      }
    </style>
  </head>
  <body >
    <div >
      <%- include ('header', {username: username}) %>
    </div>
    <div class="flex flex-col justify-center items-center p-4">
      <div class="flex flex-col justify-center md:w-2/5 w-full">
        <hr />
        <div class="pt-6 flex justify-between">
          <a href="/election/<%= election.id %>" class="font-bold text-4xl hover:underline"><%= election.name %></a>
        </div>

        <!-- Update Option -->
        <div class="pt-6">
          <!-- flash message -->
          <div class="flex flex-col justify-center items-center gap-3 pt-4">
            <% if (messages && messages.error && messages.error.length > 0) { %>
              <% for(var i=0; i<messages.error.length; i++) {%>
                <div class="bg-red-300 text-red-900 font-semibold p-2 rounded-lg shadow"> <%= messages.error[i] %></div>
              <% } %>
            <% } %>
          </div>
          <p class="text-gray-600 text-2xl">Edit Option</p>
          <form action="/election/<%= election.id %>/question/<%= question.id %>/option/<%= option.id %>/update" method="post" class="flex flex-col gap-4 pt-4">
            <input type="hidden" name="_csrf" value="<%= csrf %>" />
            <div class="flex flex-col w-full">
              <input type="text" name="choice" value="<%= option.choice %>" placeholder="Value" class="border-2 border-black p-2 rounded-lg"/>
            </div>
            <div class="flex justify-center items-center w-full gap-4">
              <button type="submit" class="btn btn-warning bg-yellow-500">
                Update Option
              </button>
              <a href="/election/<%= election.id %>/question/<%= question.id %>" class="btn btn-danger">
                Cancel
              </a>
            </div>
          </form>          
        </div>
      </div>
    </div>
  </body>
</html>
