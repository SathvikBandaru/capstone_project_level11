<html>
    <head>
        <meta name="csrf-token" content="<%= csrf %>" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.tailwindcss.com"></script>
        <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
        integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
        />
        <style>
            body{
        background: linear-gradient(#7600ca, #dbd0038d);
      }
        </style>
        <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"> -->
    </head>
    <body>
        <form action="/election/<%= election.id %>/vote" method="post" class="flex flex-col gap-4 justify-center items-center">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
            <div class="flex flex-col gap-2">
                <label for="VoterId">Voter ID</label>
                <input class="border-2 flex items-center border-black p-2 rounded-lg" id="VoterId" placeholder="Voter ID" type="text" name="VoterId"/>
            </div>
            <div class="flex flex-col gap-2">
                <label for="Password">Password</label>
                <input class="border-2 flex items-center border-black p-2 rounded-lg" id="Password"  type="password" placeholder="Password"  name="Password"/>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>

        <!-- flash message -->
        <div class="flex flex-col justify-center items-center gap-3 pt-4">
            <% if (messages && messages.error && messages.error.length > 0) { %>
            <% for(var i=0; i<messages.error.length; i++) {%>
                <div class="bg-red-300 text-red-900 font-semibold p-2 rounded-lg shadow"> <%= messages.error[i] %></div>
            <% } %>
            <% } %>
        </div>
    </body>
</html>